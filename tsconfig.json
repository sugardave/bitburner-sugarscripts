{
    "include": ["NetscriptDefinitions.d.ts", "src/**/*"],
    "exclude": ["src/**/*.d.ts"],
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "strict": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "baseUrl": "src/",
        "paths": {
            "/*": ["*"],
            "@ns": ["../NetscriptDefinitions.d.ts"]
        }
    }
}
